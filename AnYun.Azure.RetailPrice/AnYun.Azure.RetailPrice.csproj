<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>AnYun</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>1.0.0-preview</Version>
    <Description>AnYun.Azure.RetailPrice is an SDK for querying Azure service prices. It provides an easy-to-use API that allows developers to effortlessly retrieve pricing information for various Azure services.</Description>
    <PackageTags>Azure,RetailPrice</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
